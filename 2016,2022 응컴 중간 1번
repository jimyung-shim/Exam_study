/*2022 응컴 중간 1번*/
#include<stdio.h>
int main()
{
	int n;
	printf("Enter the number of integers >> ");
	scanf_s("%d", &n);

	int arr[100] = { 0 };
	printf("Enter integers >> ");
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}

	int j = 0;
	int flag = 1;
	while (1) {
		if (arr[j] > arr[j + 1]) {
			flag = 0;
			int swap = arr[j];
			arr[j] = arr[j + 1];
			arr[j + 1] = swap;
		}
		if (j == n - 2 && flag)break;
		if (j == n - 2) {
			j = 0;
			flag = 1;
			continue;
		}
		j++;
	}

	printf("After sorting: ");
	for (int i=0; i < n; i++)printf("%d ", arr[i]);
	
	return 0;
}



/* 	   2016		임의 개수의 정수를 입력하여, 오름차순 및 내림차순으로 정렬하는 프로그램을 작성하라.*/
#include<stdio.h>
#define NUMEL 1000
int main()
{
	int arr[NUMEL];
	int num;

	printf("Enter the number of integers >> ");
	scanf_s("%d", &num);

	printf("Enter integers >> ");
	for (int a = 0; a < num; a++) {
		scanf_s("%d", &arr[a]);
	}

	int brr[NUMEL];
	
	for (int i = 0; i < num; i++) {			// 오름차순 배열 arr[] 정리
		for (int j = 0; j < (num - 1); j++) {
			if (arr[j] > arr[j + 1]) {
				int temp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = temp;
			}
		}
	}

	for (int i = 0; i < num; i++) {		// 내림차순 배열 brr[] 정리
		brr[i] = arr[num - i - 1];
	}

	printf("Ascending: ");		// 오름차순 정렬
	for (int i = 0; i < num; i++) {
		printf("%d ", arr[i]);
	}

	printf("\nDescending: ");		// 내림차순 정렬
	for (int i = 0; i < num; i++) {
		printf("%d ", brr[i]);
	}
	return 0;
}

