/*임의 개수의 정수를 입력하여, 오름차순 및 내림차순으로 정렬하는 프로그램을 작성하라.*/
#include<stdio.h>
#define NUMEL 1000
int main()
{
	int arr[NUMEL];
	int num;

	printf("Enter the number of integers >> ");
	scanf_s("%d", &num);

	printf("Enter integers >> ");
	for (int a = 0; a < num; a++) {
		scanf_s("%d", &arr[a]);
	}

	int brr[NUMEL];
	
	for (int i = 0; i < num; i++) {			// 오름차순 배열 arr[] 정리
		for (int j = 0; j < (num - 1); j++) {
			if (arr[j] > arr[j + 1]) {
				int temp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = temp;
			}
		}
	}

	for (int i = 0; i < num; i++) {		// 내림차순 배열 brr[] 정리
		brr[i] = arr[num - i - 1];
	}

	printf("Ascending: ");		// 오름차순 정렬
	for (int i = 0; i < num; i++) {
		printf("%d ", arr[i]);
	}

	printf("\nDescending: ");		// 내림차순 정렬
	for (int i = 0; i < num; i++) {
		printf("%d ", brr[i]);
	}
	return 0;
}
